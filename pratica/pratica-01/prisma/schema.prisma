
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
id Int @id @default(autoincrement())
name String
email String @unique
posts   Post[]
profile Profile?
}

model Profile {
  id Int @id @default(autoincrement())
  bio String
  userId Int @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Post {
  id      Int     @id @default(autoincrement())
  title   String
  content  String?
  userId  Int
  tags    Tags[]  @relation("PostsOnTags")
  user    User    @relation(fields: [userId], references: [id])
}

// N:N implícito (Prisma cria a tabela de junção automaticamente)

model Tags {
  id Int @id @default(autoincrement())
  name String @unique
  posts Post[] @relation("PostsOnTags")
}
